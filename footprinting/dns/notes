# Configuration variables
DOMAIN="inlanefreight.htb"
NAMESERVER="10.129.219.56"
WORDLIST="/usr/share/seclists/Discovery/DNS/fierce-hostlist.txt"
DNSENUM_OUTPUT="subdomains.txt"

# Query all record types
echo -e "\n[*] Performing ANY query..."
dig any $DOMAIN @$NAMESERVER

# Attempt zone transfer
echo -e "\n[*] Attempting AXFR zone transfer..."
dig axfr $DOMAIN @$NAMESERVER

# Run dnsenum with the given list
# -p 0: Disables reverse IPv4 range brute-forcing (default would try 1â€“255 IPs)
# -s 0: Disables reverse IPv6 range brute-forcing
echo -e "\n[*] Running dnsenum..."
dnsenum --dnsserver "$NAMESERVER" --enum -p 0 -s 0 -o "$DNSENUM_OUTPUT" -f "$WORDLIST" "$DOMAIN"

# List of discovered subdomains (from the AXFR output)
SUBDOMAINS=(
#  inlanefreight.htb
  app.inlanefreight.htb
  dev.inlanefreight.htb
#  internal.inlanefreight.htb
  mail1.inlanefreight.htb
  ns.inlanefreight.htb
)

# Loop through each subdomain and attempt zone transfer
for sub in "${SUBDOMAINS[@]}"; do
  echo "[*] Attempting AXFR on $sub @$NAMESERVER"
#  dig axfr "$sub" @"$NAMESERVER"
	dnsenum --dnsserver "$NAMESERVER" --enum -p 0 -s 0 -o "$DNSENUM_OUTPUT" -f "$WORDLIST" "$sub"
  echo ""
done
